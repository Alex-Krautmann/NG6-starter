// 0 - turn the rule off
// 1 - turn the rule on as a warning (doesn't affect exit code)
// 2 - turn the rule on as an error (exit code is 1 when triggered)
{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "globals": {
        "expect": false,
        "inject": false
    },
    "parser": "babel-eslint",
    "rules": {
        "strict": 0,
        "quotes": [1, "single"],
        "eol-last": 0
    }
}
